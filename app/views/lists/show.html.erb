<h1 class="mb-3 mt-3 text-center">
  <%= @list.name %>
</h1>

<div class="row justify-content-center">
  <% @list.bookmarks.each do |e| %>
    <div class="col-md-2">
      <div class="card mb-4 rounded-0 card-custom">
        <img src="<%= e.movie.poster_url %>" class="card-img-top" alt="<%= e.movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= e.movie.title %></h5>
          <p class="card-text"><%= e.movie.overview %></p>
          <p class="card-text"><small class="text-muted"><%= e.movie.rating %></small></p>
          
          <p class="card-text"><small class="text-muted"><%= e.comment %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center">
  <div class="col-md-3 text-center">
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-success mt-3 mr-3' %>
    <%= link_to 'Back to lists', lists_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>